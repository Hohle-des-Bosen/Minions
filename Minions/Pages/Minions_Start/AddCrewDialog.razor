<MudDialog>
    <TitleContent>
        <MudTHeadRow Class="d-flex">
            <MudText Typo="Typo.h6">New Crew</MudText>
        </MudTHeadRow>


    </TitleContent>
    <DialogContent>
        @if (Element != null)
        {
            <MudGrid>


                <MudItem xs="6">
                    <MudTextField @bind-Value="Element.Name" Label="Name" />
                    <MudTextField @bind-Value="Element.Age" Label="Age" />
                </MudItem>
                <MudItem xs="6">
                    <MudSelect T="Race" Label="Sex" AnchorOrigin="Origin.BottomCenter">

                        @foreach (Race item in Enum.GetValues(typeof(Race)))
                        {
                            <MudSelectItem Value="@item">@item</MudSelectItem>
                        }
                    </MudSelect>
                    <MudSelect T="Sex" Label="Sex" AnchorOrigin="Origin.BottomCenter">

                        @foreach (Sex item in Enum.GetValues(typeof(Sex)))
                        {
                            <MudSelectItem Value="@item">@item</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="Element.Payment" Label="Payment" />
                    <MudTextField @bind-Value="Element.Job" Label="Job" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="Element.DayWihtoutPay" Label="DayWihtoutPay" />
                    <MudTextField @bind-Value="Element.Name" Label="Name" />
                </MudItem>
            </MudGrid>


        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Create">Delete Server</MudButton>
    </DialogActions>
</MudDialog>







@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

