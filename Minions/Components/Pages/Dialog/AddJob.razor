



<MudDialog>

    <TitleContent>
        <MudTHeadRow Class="d-flex">
            <MudText Typo="Typo.h6">Add Job</MudText>
        </MudTHeadRow>


    </TitleContent>

 

    <DialogContent>


        @if (Job != null)
        {


            <MudTextField @bind-Value="Job.Name" Label="Name" Variant="Variant.Outlined"></MudTextField>
            <br />
            <MudTextField @bind-Value="Job.Payment" Label="Payment" Variant="Variant.Outlined"></MudTextField>
            <br />
            <MudTextField @bind-Value="Job.Description" Label="Description" Variant="Variant.Outlined" Lines="4"></MudTextField>
            <br />
            <MudTextField @bind-Value="Job.Requirement" Label="Requirement" Variant="Variant.Outlined" Lines="4"></MudTextField>

        }













    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Create">Add</MudButton>
    </DialogActions>
</MudDialog>



@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Job Job { get; set; }


    private void Cancel()
    {
        MudDialog.Cancel();
    }
    public void Create()
    {
        MudDialog.Close(DialogResult.Ok(Job));
    }
}
