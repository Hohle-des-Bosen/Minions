<h3>AddJob</h3>







<MudDialog>
    <TitleContent>
        <MudTHeadRow Class="d-flex">
            <MudText Typo="Typo.h6">New Job</MudText>
        </MudTHeadRow>


    </TitleContent>

    <DialogContent>


        @if (Job != null)
        {
            <MudGrid>

                <MudItem>
                    <MudTextField @bind-Value="Job.Name" Label="Name"></MudTextField>
                </MudItem>

                <MudItem>
                    <MudTextField @bind-Value="Job.Description" Label="Description"></MudTextField>
                </MudItem>

                <MudItem>
                    <MudTextField @bind-Value="Job.Payment" Label="Payment"></MudTextField>
                </MudItem>

                <MudItem>
                    <MudTextField @bind-Value="Job.Requirement" Label="Requirement"></MudTextField>
                </MudItem>

            </MudGrid>

        }

    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Create">Add</MudButton>
    </DialogActions>
</MudDialog>















@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Job Job { get; set; }








    private void Cancel()
    {
        MudDialog.Cancel();
    }
    public void Create()
    {
        MudDialog.Close(DialogResult.Ok(Job));
    }
}
